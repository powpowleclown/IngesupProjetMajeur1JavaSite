<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
version="3.1">
  <display-name>MajeurProjet</display-name>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <scripting-invalid>true</scripting-invalid>
    </jsp-property-group>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/includes/header.jsp</include-prelude>
      <include-coda>/WEB-INF/includes/footer.jsp</include-coda>
    </jsp-property-group>
  </jsp-config>
  
<servlet>
        <servlet-name>CXFServlet</servlet-name>
        <servlet-class>
            org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet
        </servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.majeurProjet.rest.ApplicationRest</param-value>
        </init-param>
    	<init-param>
			<param-name>jaxrs.address</param-name>
			<param-value>/rest</param-value>
		</init-param>
		<init-param>
        <param-name>jaxrs.providers</param-name>
        <param-value>
            org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider
        </param-value>
    </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>CXFServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
  
  <servlet>
    <servlet-name>ServletHome</servlet-name>
    <servlet-class>com.majeurProjet.controller.ServletHome</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletHome</servlet-name>
    <url-pattern>/Home/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletBackOffice</servlet-name>
    <servlet-class>com.majeurProjet.controller.ServletBackOffice</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletBackOffice</servlet-name>
    <url-pattern>/BackOffice/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletBackOfficeComputer</servlet-name>
    <servlet-class>com.majeurProjet.controller.ServletBackOfficeComputer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletBackOfficeComputer</servlet-name>
    <url-pattern>/BackOffice/Computer/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletBackOfficeIncident</servlet-name>
    <servlet-class>com.majeurProjet.controller.ServletBackOfficeIncident</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletBackOfficeIncident</servlet-name>
    <url-pattern>/BackOffice/Incident/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletBackOfficeRoom</servlet-name>
    <servlet-class>com.majeurProjet.controller.ServletBackOfficeRoom</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletBackOfficeRoom</servlet-name>
    <url-pattern>/BackOffice/Room/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletBackOfficeState</servlet-name>
    <servlet-class>com.majeurProjet.controller.ServletBackOfficeState</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletBackOfficeState</servlet-name>
    <url-pattern>/BackOffice/State/*</url-pattern>
  </servlet-mapping>  
    <servlet>
    <servlet-name>ServletBackOfficeUser</servlet-name>
    <servlet-class>com.majeurProjet.controller.ServletBackOfficeUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletBackOfficeUser</servlet-name>
    <url-pattern>/BackOffice/User/*</url-pattern>
  </servlet-mapping> 
    <servlet>
    <servlet-name>ServletBackOfficeRole</servlet-name>
    <servlet-class>com.majeurProjet.controller.ServletBackOfficeRole</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletBackOfficeRole</servlet-name>
    <url-pattern>/BackOffice/Role/*</url-pattern>
  </servlet-mapping>
   <filter>
    <filter-name>FilterBackOffice</filter-name>
    <filter-class>com.majeurProjet.filters.FilterLogin</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterBackOffice</filter-name>
    <url-pattern>/BackOffice/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FilterHibernate</filter-name>
    <filter-class>com.majeurProjet.filters.FilterHibernate</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterHibernate</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
    <filter>
    <filter-name>FilterBroadcast</filter-name>
    <filter-class>com.majeurProjet.filters.FilterBroadcast</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterBroadcast</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>